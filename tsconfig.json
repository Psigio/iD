{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "es2015",
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es2015",
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "allowJs": false
    },
    "include": [
        "modules/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}